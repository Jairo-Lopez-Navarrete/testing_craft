

{% block content %}
<div id="left-section">
  <img src="{{ siteUrl('fotos/inlogfoto.png') }}">
</div>
<!-- loginform -->
<div id="right-section">
  <form id="login-form">
    <h2 class="">{{ loginform.logintitel }}</h2>
    <label for="username">{{ loginform.loginnaam }}</label>
    <input type="text" id="username" name="username" required>

    <label for="password">{{ loginform.loginwachtwoord }}</label>
    <input type="password" id="password" name="password" required>
    <h6><a href="{{ url('paginanietgevonden') }}">{{ loginform.loginvergeten }}</a></h6>
    <button type="button" id="login-button">{{ loginform.loginbutton }}</button>
    <button id="register-button" type="button">{{ loginform.loginregistreren }}</button>
  </form>
</div>


{% endblock %}